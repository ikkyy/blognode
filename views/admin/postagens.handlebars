<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Data: {{data}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar</button></a>

                <input type="hidden" name="id" value="{{_id}}">
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada!</h4>
{{/each}}