{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" value="{{postagem.slug}}" class="form-control">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control">{{postagem.titulo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma Categoria Registrada!</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-2" type="submit">Editar Postagem</button>
        </form>
    </div>
</div>